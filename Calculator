public class Calculator {
    public static double arctan(double x) {
        double total = 0.0;
        int neg = 1;
        for (int i = 1; i <= 31; i += 2) {
            total += (Math.pow(x, i) * neg) / i;
            neg *= -1;  // Alternate signs
        }

        return total;
    }

    public static void main(String[] args) {
        System.out.println(arctan(0.5));
    }
}
